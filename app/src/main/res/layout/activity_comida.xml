<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true">


    <ImageView
        android:id="@+id/imagem_comida"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/nada"
        android:src="@drawable/comida" />

    <TextView
        android:id="@+id/text_comida"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/imagem_comida"
        android:fontFamily="@font/gotham"
        android:text="Comida"
        android:textColor="#ffff"
        android:textSize="60sp"/>
    <View
        android:id="@+id/view_comida"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_comida"
        android:layout_width="350dp"
        android:layout_marginTop="10dp"
        android:layout_height="2dp"
        android:background="#f26f6f" />

    <TextView
        android:id="@+id/text_descricao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view_comida"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:fontFamily="@font/gotham"
        android:text="Informações"
        android:textColor="#ffffff"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textoComida1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_descricao"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:text="Um cão deve ingerir em torno de 300 a 800 g de água de acordo com seu porte. Ou seja, um cachorro de porte medio come 340g de ração por dia"
        android:gravity="end"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:fontFamily="@font/calibri"

        />
    <TextView
        android:id="@+id/textoComida2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoComida1"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:fontFamily="@font/calibri"
        android:textSize="20sp"
        android:textColor="#f26f6f"
        android:text="Mas, lembre-se de dar comida somente 3 vezes ao dia"
        android:gravity="fill_horizontal"
        />
    <TextView
        android:id="@+id/textoComida3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoComida2"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/calibri"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Fique tranquilo, a gente te lembra disso ;)"
        android:gravity="fill_horizontal"
        />



</RelativeLayout>
